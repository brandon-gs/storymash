{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "compilerOptions": {
    "noUnusedLocals": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
