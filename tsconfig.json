{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "compilerOptions": {
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"],
  "include": ["index.d.ts", "**/*.ts", "**/*.tsx"]
}
